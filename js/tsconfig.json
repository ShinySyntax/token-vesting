{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "baseUrl": "./",
      "paths": {
        "*": ["types/*"]
      }
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": ["src/*", "src/.ts"],
  "exclude": ["**/node_modules", "dist", "tests", "src/example.ts"]
}
